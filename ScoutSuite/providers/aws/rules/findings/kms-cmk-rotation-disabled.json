    "references": [
        "https://docs.aws.amazon.com/kms/latest/developerguide/rotate-keys.html"
    ],
    "dashboard_name": "Keys",
    "display_path": "kms.regions.id.keys.id",
    "path": "kms.regions.id.keys.id",
    "conditions": [
        "and",
        [
            "kms.regions.id.keys.id.rotation_enabled",
