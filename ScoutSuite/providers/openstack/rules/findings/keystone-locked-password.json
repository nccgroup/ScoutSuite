{
    "description": "Password change is locked",
    "rationale": "PCI DSS 8.2.4: Users should not keep the same password for too long.<br>The usage of 'lock_password' user  option could be dangerous and should be monitored",
    "references": [
        "https://www.pcisecuritystandards.org/documents/PCI_DSS_v3-2-1.pdf",
        "https://docs.openstack.org/keystone/victoria/admin/configuration.html#prevent-self-service-password-changes"
    ],
    "dashboard_name": "Users with password change locked",
    "path": "keystone.users.id",
    "conditions": ["and",
        [
            "keystone.users.id.options.lock_password",
            "true",
            ""
        ]
    ]
}
