{
    "description": "Password expiration ignored",
    "rationale": "PCI DSS 8.2.4: Users should not keep the same password for too long.<br>The usage of 'ignore_password_expiry' user option could be dangerous and should be avoided.",
    "references": [
        "https://www.pcisecuritystandards.org/documents/PCI_DSS_v3-2-1.pdf",
        "https://docs.openstack.org/keystone/victoria/admin/configuration.html#configuring-password-expiration"
    ],
    "dashboard_name": "Users with password expiration ignored",
    "path": "keystone.users.id",
    "conditions": ["and",
        [
            "keystone.users.id.options.ignore_password_expiry",
            "true",
            ""
        ]
    ]
}
