    "references": [
        "https://www.pcisecuritystandards.org/documents/PCI_DSS_v3-2-1.pdf",
        "https://docs.openstack.org/keystone/victoria/admin/configuration.html#disabling-inactive-users"
    ],
    "dashboard_name": "Users ignoring inactivity policy",
    "path": "keystone.users.id",
    "conditions": ["and",
        [
            "keystone.users.id.options.ignore_user_inactivity",
            "true",
            ""
        ]
    ]
}
