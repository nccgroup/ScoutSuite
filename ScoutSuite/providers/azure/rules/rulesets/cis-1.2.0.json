          {
              "enabled": true,
              "level": "danger"
          }
      ],
    "storageaccount-encrypted-not-customer-managed.json": [
      {
        "enabled": true,
        "level": "warning"
      }
    ],
    "storageaccount-soft-delete-enabled.json": [
